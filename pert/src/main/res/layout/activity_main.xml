<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Optimistic time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="44dp" android:id="@+id/optimisticTimeText" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/normalTimeText"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:text="Normal time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/normalTimeText" app:layout_constraintStart_toStartOf="@+id/optimisticTimeText"
            app:layout_constraintEnd_toEndOf="@+id/optimisticTimeText" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/optimisticTimeText"/>
    <TextView
            android:text="Pessimistic time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pessimisticTimeText" app:layout_constraintStart_toStartOf="@+id/normalTimeText"
            app:layout_constraintEnd_toEndOf="@+id/normalTimeText" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/normalTimeText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/optimisticTimeInput"
            android:hint="Enter hours"
            app:layout_constraintBottom_toBottomOf="@+id/optimisticTimeText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/normalTimeInput"
            android:hint="Enter hours"
            app:layout_constraintBottom_toBottomOf="@+id/normalTimeText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pessimisticTimeInput"
            android:hint="Enter hours"
            app:layout_constraintBottom_toBottomOf="@+id/pessimisticTimeText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <Button
            android:text="Calculate estimate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/calculateButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <Switch
            android:text="Remember the result to calculate the standard deviation of the entire task sequence (when calculating multiple tasks)"
            android:layout_width="337dp"
            android:layout_height="63dp"
            android:id="@+id/rememberResultSwitch" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/pessimisticTimeText"/>
    <TextView
            android:text="Number of saved tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/rememberResultSwitch"
            app:layout_constraintEnd_toEndOf="@+id/rememberResultSwitch" android:id="@+id/numberOfSavedTasksText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/rememberResultSwitch"/>
    <Button
            android:text="Remove last task from memory"
            android:layout_width="169dp"
            android:layout_height="63dp"
            android:id="@+id/removeLastTaskFromMemoryButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton"/>
    <Button
            android:text="Remove all tasks from memory"
            android:layout_width="169dp"
            android:layout_height="63dp"
            android:id="@+id/removeAllTasksFromMemory" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton"
    />
</android.support.constraint.ConstraintLayout>