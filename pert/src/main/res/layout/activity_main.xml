<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/optimistic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optimisticTimeText" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/normalTimeText"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/normal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/normalTimeText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/optimisticTimeText" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/optimisticTimeText"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/pessimistic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pessimisticTimeText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/normalTimeText" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/normalTimeText"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>

    <EditText
            android:id="@+id/optimisticTimeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/enter_hours"
            android:inputType="number|numberDecimal"
            android:maxLength="6"
            app:layout_constraintBottom_toBottomOf="@+id/optimisticTimeText"
            app:layout_constraintEnd_toEndOf="parent"
            tools:targetApi="o" />

    <EditText
            android:id="@+id/normalTimeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/enter_hours"
            android:inputType="number|numberDecimal"
            android:maxLength="6"
            app:layout_constraintBottom_toBottomOf="@+id/normalTimeText"
            app:layout_constraintEnd_toEndOf="parent"
            tools:targetApi="o" />

    <EditText
            android:id="@+id/pessimisticTimeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/enter_hours"
            android:inputType="number|numberDecimal"
            android:maxLength="6"
            app:layout_constraintBottom_toBottomOf="@+id/pessimisticTimeText"
            app:layout_constraintEnd_toEndOf="parent"
            tools:targetApi="o" />

    <Button
            android:id="@+id/calculateButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="84dp"
            android:text="@string/calculate_estimate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />
    <Switch
            android:text="@string/remember_the_result_to_calculate_the_standard_deviation_of_the_entire_task_sequence_when_calculating_multiple_tasks"
            android:layout_width="337dp"
            android:layout_height="63dp"
            android:id="@+id/rememberResultSwitch" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/pessimisticTimeText"/>
    <TextView
            android:text="@string/number_of_saved_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/rememberResultSwitch"
            app:layout_constraintEnd_toEndOf="@+id/rememberResultSwitch" android:id="@+id/numberOfSavedTasksText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/rememberResultSwitch"/>

    <Button
            android:id="@+id/removeLastTaskFromMemoryButton"
            android:layout_width="169dp"
            android:layout_height="63dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/remove_last_task_from_memory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton" />

    <Button
            android:id="@+id/removeAllTasksFromMemory"
            android:layout_width="169dp"
            android:layout_height="63dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/remove_all_tasks_from_memory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton" />
</android.support.constraint.ConstraintLayout>